---
import { siteConfig } from "../config";
const { contact, social, founder } = siteConfig;
---

<footer id="contact" class="px-6 py-24 md:py-32" style="background: var(--c-bg-alt);">
  <div class="max-w-2xl mx-auto text-center">

    <!-- Section label -->
    <div class="reveal">
      <p class="text-xs tracking-[0.3em] uppercase mb-4" style="color: var(--c-accent);">
        Contact
      </p>
      <div class="gold-line w-12 mx-auto mb-12"></div>
    </div>

    <!-- Email -->
    <div class="reveal stagger-1 mb-6">
      <a href={`mailto:${contact.email}`} class="text-lg md:text-xl tracking-wide hover:opacity-80 transition-opacity" style="color: var(--c-text); font-family: 'Cormorant Garamond', serif;">
        {contact.email}
      </a>
    </div>

    <!-- Phone -->
    <div class="reveal stagger-2 mb-8">
      <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="text-sm tracking-[0.1em] hover:opacity-80 transition-opacity" style="color: var(--c-text-muted);">
        {contact.phone}
      </a>
    </div>

    <!-- Location -->
    <div class="reveal stagger-3 mb-12">
      <p class="text-xs tracking-[0.15em] uppercase" style="color: var(--c-text-muted);">
        <span class="lang-fr">{contact.location.fr}</span>
        <span class="lang-es">{contact.location.es}</span>
      </p>
    </div>

    <!-- Social links -->
    {(social.instagram || social.linkedin) && (
      <div class="reveal stagger-4 flex justify-center gap-6 mb-16">
        {social.instagram && (
          <a href={social.instagram} target="_blank" rel="noopener noreferrer" class="group" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="transition-colors" style="color: var(--c-text-muted);">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
            </svg>
          </a>
        )}
        {social.linkedin && (
          <a href={social.linkedin} target="_blank" rel="noopener noreferrer" class="group" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="transition-colors" style="color: var(--c-text-muted);">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
              <rect x="2" y="9" width="4" height="12"/>
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </a>
        )}
      </div>
    )}

    <!-- Divider -->
    <div class="reveal stagger-5 gold-line w-8 mx-auto mb-8"></div>

    <!-- Founder credit -->
    <div class="reveal stagger-5 mb-6">
      <p class="text-xs tracking-[0.1em]" style="color: var(--c-text-muted);">
        <span class="lang-fr">Fondée par</span>
        <span class="lang-es">Fundada por</span>
        {' '}
        <a href={founder.website} target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity" style="color: var(--c-accent);">
          {founder.name}
        </a>
        {' · '}
        <span class="lang-fr">{founder.title.fr}</span>
        <span class="lang-es">{founder.title.es}</span>
      </p>
    </div>

    <!-- Copyright -->
    <div class="reveal stagger-6">
      <p class="text-xs" style="color: var(--c-border);">
        © {new Date().getFullYear()} Association Caelicola
      </p>
    </div>

  </div>
</footer>
