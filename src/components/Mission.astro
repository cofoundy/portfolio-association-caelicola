---
import { siteConfig } from "../config";
const { disciplines, mission, missionFull } = siteConfig;

const iconMap: Record<string, string> = {
  film: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="2.18" ry="2.18"/><line x1="7" y1="2" x2="7" y2="22"/><line x1="17" y1="2" x2="17" y2="22"/><line x1="2" y1="12" x2="22" y2="12"/><line x1="2" y1="7" x2="7" y2="7"/><line x1="2" y1="17" x2="7" y2="17"/><line x1="17" y1="7" x2="22" y2="7"/><line x1="17" y1="17" x2="22" y2="17"/></svg>`,
  theater: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/></svg>`,
  book: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>`,
  camera: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/><circle cx="12" cy="13" r="4"/></svg>`,
  search: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>`,
  calendar: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>`,
  education: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/></svg>`,
};
---

<section id="mission" class="px-6 py-24 md:py-32" style="background: var(--c-bg-alt);">
  <div class="max-w-3xl mx-auto">

    <!-- Section title -->
    <div class="reveal text-center mb-16">
      <p class="text-xs tracking-[0.3em] uppercase mb-4" style="color: var(--c-accent);">
        <span class="lang-fr">L'Association</span>
        <span class="lang-es">La Asociación</span>
      </p>
      <h2 class="text-3xl md:text-4xl" style="font-family: 'Cormorant Garamond', serif; color: var(--c-text);">
        <span class="lang-fr">Notre mission</span>
        <span class="lang-es">Nuestra misión</span>
      </h2>
    </div>

    <!-- Mission statement -->
    <div class="reveal stagger-1 mb-16">
      <p class="text-lg md:text-xl leading-relaxed text-center" style="color: var(--c-text); font-family: 'Cormorant Garamond', serif; font-size: 1.35rem; line-height: 1.8;">
        <span class="lang-fr">{mission.fr}</span>
        <span class="lang-es">{mission.es}</span>
      </p>
    </div>

    <!-- Gold separator -->
    <div class="reveal stagger-2 gold-line w-12 mx-auto mb-16"></div>

    <!-- Disciplines grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-12 gap-y-5 mb-16">
      {disciplines.map((d, i) => (
        <div class={`reveal stagger-${Math.min(i + 2, 7)} discipline-item flex items-center gap-4 py-2`}>
          <span class="flex-shrink-0" style="color: var(--c-accent);" set:html={iconMap[d.icon] || ''} />
          <span class="text-sm tracking-wide" style="color: var(--c-text-muted);">
            <span class="lang-fr">{d.fr}</span>
            <span class="lang-es">{d.es}</span>
          </span>
        </div>
      ))}
    </div>

    <!-- Full mission text (smaller, elegant) -->
    <div class="reveal stagger-6">
      <p class="text-sm leading-7 text-center" style="color: var(--c-text-muted);">
        <span class="lang-fr">{missionFull.fr}</span>
        <span class="lang-es">{missionFull.es}</span>
      </p>
    </div>

  </div>
</section>
